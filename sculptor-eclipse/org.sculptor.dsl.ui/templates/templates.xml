    context="org.sculptor.dsl.Sculptordsl.DslModule" enabled="true">
    Module ${name}${cursor} {
    }
</template>

<template name="Entity template" description="Snippet of Entity" id="Entity"
    context="org.sculptor.dsl.Sculptordsl.DslEntity" enabled="true">
        Entity ${name}${cursor} {
        }
